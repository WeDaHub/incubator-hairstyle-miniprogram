.fusion {
  position: relative;
  padding-bottom: 0 !important;
}
.fusion .main-preview {
  flex: 1;
}
.fusion .fusion-tool-btn {
  position: absolute;
  bottom: 320rpx;
  z-index: 2;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.fusion .fusion-tool-btn .btn-tooltip {
  position: relative;
  padding-right: 20rpx;
  margin-right: -20rpx;
}
.fusion .fusion-tool-btn .btn-tooltip .btn-tooltip-content {
  border-radius: 4rpx;
  background-color: #555;
  color: #fff;
  font-size: 28rpx;
  line-height: 60rpx;
  height: 60rpx;
  padding: 0 18rpx;
}
.fusion .fusion-tool-btn .btn-tooltip .btn-tooltip-arrow {
  content: '';
  position: absolute;
  top: 50%;
  width: 20rpx;
  height: 20rpx;
  margin-top: -10rpx;
  right: 11rpx;
  background-color: #555;
  transform-origin: 50% 50%;
  transform: rotate(45deg);
}
.fusion .fusion-tool-btn .btn-icon {
  width: 92rpx;
  height: 92rpx;
  margin-left: 18rpx;
  display: flex;
  flex-grow: 0;
  flex-shrink: 0;
  flex-basis: auto;
  align-items: center;
}
.fusion .fusion-confirm-btn {
  position: absolute;
  top: 0;
  right: 0;
  padding: 36rpx;
  z-index: 2;
  display: flex;
  align-items: center;
}
.fusion .fusion-confirm-btn .btn-icon {
  width: 48rpx;
  height: 48rpx;
}
.fusion .bottom-bar {
  flex-shrink: 0;
  height: 300rpx;
}
.fusion .face-list-bar {
  height: 100%;
  border-top: 1rpx solid #e5e5e5;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  z-index: 3;
}
.fusion .face-list-bar .bar-remind {
  text-align: center;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 36rpx 36rpx 4rpx;
  color: #666;
}
.fusion .list-bar-tab {
  height: 88rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  align-items: flex-end;
  padding: 0 8rpx;
}
.fusion .list-bar-tab .list-bar-tab-item {
  font-size: 32rpx;
  line-height: 88rpx;
  margin: 0 48rpx 0 32rpx;
  color: #888;
  border-bottom: 4rpx solid transparent;
}
.fusion .list-bar-tab .list-bar-tab-item.active {
  color: #006eff;
  border-bottom-color: #006eff;
}
.fusion .list-bar-tab-content {
  height: 300rpx;
  padding: 0 26rpx;
  display: flex;
  align-items: center;
}
.fusion .list-bar-tab-content .face-round {
  flex-shrink: 0;
  margin: 0 12rpx;
  width: 200rpx;
  height: 200rpx;
  background-color: #f2f2f2;
  box-sizing: border-box;
  overflow: hidden;
}
.fusion .list-bar-tab-content .face-round image {
  width: 200rpx;
  height: 200rpx;
}
.fusion .list-bar-tab-content .face-round.active {
  box-shadow: 0 0 0 5rpx #006eff;
}
.fusion .face-list-content {
  height: 180rpx;
  padding: 0 22rpx;
  display: flex;
  align-items: center;
}
.fusion .face-list-content .face-list-item {
  flex-shrink: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin: 0 15rpx;
  overflow: hidden;
}
.fusion .face-list-content .face-list-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.fusion .face-list-content .face-list-item.active {
  box-shadow: 0 0 0 4rpx #006eff;
}
.fusion .face-list-content .face-list-item.face-list-add {
  border-radius: 0;
}
.fusion .face-list-content .face-list-item-origin {
  position: relative;
}
.fusion .face-list-content .face-list-item-origin .face-avatar-origin-text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  background-color: rgba(0, 0, 0, 0.4);
  color: rgba(255, 255, 255, 0.8);
  font-size: 30rpx;
  line-height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  box-sizing: border-box;
  padding: 20rpx;
}
.fusion.is-ipx .fusion-tool-btn {
  margin-bottom: 32rpx;
}
.fusion.is-ipx .bottom-bar,
.fusion.is-ipx .face-list-bar {
  padding-bottom: 32rpx;
}
.fusion .switch-engine-picker {
  flex: 1;
  text-align: right;
}
.fusion .list-bar-tab .switch-engine-tab {
  color: #006eff;
}
